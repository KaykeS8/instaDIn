<div class="flex w-screen h-screen justify-between">
  <section class="p-4 w-full">
    <header class="container font-bold text-xl">
      <%= link_to 'Instadin',  root_path %>
    </header>
    <div class="flex flex-col items-center justify-center mt-16">
      <h2 class="text-4xl font-bold mb-2">Cadastra-se</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'w-[420px]'}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

         <div class="field mb-2">
          <%= f.label :name%><br />
          <%= f.email_field :name, autofocus: true, autocomplete: "name", class: 'rounded-md focus:bg-blue-50 w-full'%>
        </div>

        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded-md focus:bg-blue-50 w-full' %>
        </div>

        <div class="field mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'rounded-md focus:bg-blue-50 w-full' %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded-md focus:bg-blue-50 w-full' %>
        </div>

        <div class="actions mb-2">
          <%= f.submit "Sign up", class: 'bg-blue-600 w-full py-2 rounded-md text-white cursor-pointer hover:bg-blue-700 transition' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </section>
  <section class="w-full">
    <%= image_tag asset_path('image-cadastro'),class: 'block bg-cover w-full h-screen' %>
  </section>
</div>

