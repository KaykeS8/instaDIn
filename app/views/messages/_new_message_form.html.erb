<div class="flex items-center gap-3 p-3 bg-gray-100 rounded-lg">
  <%= form_with(url: chat_messages_path(chat.id),model: message, method: :post, local: true, class: "flex flex-1 gap-3") do |f| %>
    <%= f.text_field :content, placeholder: "Digite sua mensagem...", class: "flex-1 p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= f.submit "Enviar", class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition" %>
  <% end %>
</div>
