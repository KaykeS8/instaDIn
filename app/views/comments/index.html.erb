<%= turbo_frame_tag "comments" do %>
    <section class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-10">
        <div class="bg-white rounded-lg shadow-lg w-full max-w-max">
            <div class="flex">
              <div class="w-full h-96 bg-gray-200">
                <%= image_tag(url_for(@post.image), class: 'w-full h-full object-cover') if @post.image.attached? %>
              </div>
                <div class="w-full">
                    <div class="flex py-2 p-4 gap-2 items-center border-b border-black">
                         <img class="w-10 h-10 rounded-full" src="https://via.placeholder.com/150" alt="User Avatar">
                        <span class="font-semibold"><%= @post.user.name %></span>
                    </div>
                    <div class="py-2 px-4">
                        <%= render @comments%>
                    </div>
                </div>
            </div>
        </div>
    </section>
<% end %>
