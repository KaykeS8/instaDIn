<% users.each do |user|%>
    <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center">
            <!-- Foto de perfil (substitua o src pelo caminho da imagem do usuÃ¡rio) -->
            <% if user.profile && user.profile.photo_of_profile %>
                <div class="w-16 h-16 rounded-full overflow-hidden mr-4">
                    <%= image_tag(url_for(user.profile.photo_of_profile), class: 'w-full h-full object-cover')%>
                </div>
            <% else %>
                <img
                src="https://via.placeholder.com/150"
                alt="Foto de perfil"
                class="w-16 h-16 rounded-full mr-4"
                />
            <% end %>
            <div>
            <h2 class="text-lg font-semibold"><%= user.name%></h2>
            </div>
        </div>
        <%= button_to 'Enviar pedido de amizade', friends_path(user.id), method: :post, class: 'mt-4 w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600'%>
        
    </div>

<% end %>
