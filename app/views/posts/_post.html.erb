<div class="max-w-md mx-auto bg-white border border-gray-300 rounded-lg shadow-md mb-6">
  <!-- Cabeçalho do Post (Nome de usuário e opções) -->
  <div class="flex items-center justify-between p-4">
    <div class="flex items-center space-x-4">
      <div class="flex items-center gap-2">
        <!-- Avatar e nome do usuário -->
        <img class="w-10 h-10 rounded-full" src="https://via.placeholder.com/150" alt="User Avatar">
        <span class="font-semibold"><%= current_user.name %></span>

        <!-- Separador e tempo do post -->
        <div class="flex items-center gap-1">
          <div class="w-1 h-1 rounded-full bg-[#d9d9d9]"></div>
          <span class="whitespace-nowrap">
            <%= distance_of_time_in_words(post.created_at, Time.current, include_seconds: false) %> 
          </span>
        </div>
      </div>
    </div>

    <!-- Botão de deletar post -->
    <%= link_to '🗑️', post_path(post), data: { turbo_method: :delete }, class: "text-red-500 hover:text-red-700" %>
  </div>

  <!-- Imagem do Post -->
  <div class="w-full h-96 bg-gray-200">
    <%= image_tag(url_for(post.image), class: 'w-full h-full object-cover') if post.image.attached? %>
  </div>

  <!-- Descrição e Botões de Ação -->
  <div class="p-4">
    <!-- Botões de ação (Curtir, Comentar) -->
    <div class="flex items-center space-x-4 mb-2">
      <button class="focus:outline-none">
        <svg class="w-6 h-6 text-gray-500 hover:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path></svg>
      </button>
      <button class="focus:outline-none">
        <svg class="w-6 h-6 text-gray-500 hover:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18"></path></svg>
      </button>
    </div>
    
    <!-- Descrição do Post -->
    <p class="text-gray-700"><strong><%= post.user.name %>: </strong> <%= post.description %></p>
  </div>
</div>

<!-- Botão de logout -->
<div class="flex justify-end p-4">
  <%= link_to "Sair", destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition" %>
</div>
